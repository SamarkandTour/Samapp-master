<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uz.samtuit.samapp.main.LogoActivity"
    android:padding="0dp"
    android:background="@color/ColorPrimary"
    android:id="@+id/logoMainLayout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/logo_horizontal_margin"
        android:layout_marginRight="@dimen/logo_horizontal_margin"
        android:id="@+id/imageView2"
        android:src="@drawable/sam_tour_logo"
        android:scaleType="centerInside"
        />
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="15dp"
        android:text=""/>
</FrameLayout>
