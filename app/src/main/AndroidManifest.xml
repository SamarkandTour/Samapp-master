<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uz.samtuit.samapp.main" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="uz.samtuit.samapp.util.GlobalsClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <activity
            android:name="uz.samtuit.samapp.main.LogoActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uz.samtuit.samapp.main.MainMap"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name="uz.samtuit.samapp.main.ItemsListActivity" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name="uz.samtuit.samapp.main.MainMenu" />
        <activity android:name=".ItemActivity" />
        <activity android:name="uz.samtuit.samapp.main.LanguageSettingActivity" />
        <activity android:name="uz.samtuit.samapp.main.AboutCityActivity" />
        <activity android:name="uz.samtuit.samapp.main.WizardDaySelectActivity" />
        <activity android:name="uz.samtuit.samapp.main.WizardCourseSelectActivity" />
        <activity android:name="uz.samtuit.samapp.main.SuggestedItineraryActivity" />
        <activity android:name="uz.samtuit.samapp.main.TrainsTimeTableActivity" />
        <activity android:name="uz.samtuit.samapp.main.TashkentSamarkandActivity" />
        <activity android:name="uz.samtuit.samapp.main.AboutAppActivity" >
        </activity>
        <receiver
            android:name="uz.samtuit.samapp.main.DownloadCompleteReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
