        </activity>
        <activity
            android:name="uz.samtuit.samapp.main.SuggestedItinerary"
            android:label="@string/title_activity_itinerary_wizard" >
        </activity>
        <activity
            android:name="uz.samtuit.samapp.main.TrainsTimeTableActivity"
            android:label="@string/title_activity_trains_time_table" >
