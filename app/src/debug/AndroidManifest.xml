        <activity
            android:name="uz.samtuit.samapp.main.MainMenu"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name="uz.samtuit.samapp.main.StarterActivity"
            android:label="@string/title_activity_splash" >
